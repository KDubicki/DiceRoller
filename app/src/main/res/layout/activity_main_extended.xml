<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityExtended">

    <TextView
        android:id="@+id/playerLabel"
        android:layout_width="303dp"
        android:layout_height="29dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="@string/player_label_format"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rollResultText"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:text="@string/click_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/rollButton"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="200dp"
        android:text="@string/button_initial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dice1Img"
        android:layout_width="60dp"
        android:layout_height="270dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:tintMode="multiply"
        app:layout_constraintStart_toEndOf="@+id/dice5Img"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dice3Img"
        android:layout_width="60dp"
        android:layout_height="270dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:tintMode="multiply"
        app:layout_constraintStart_toEndOf="@+id/dice2Img"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dice4Img"
        android:layout_width="60dp"
        android:layout_height="270dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:tintMode="multiply"
        app:layout_constraintStart_toEndOf="@+id/dice3Img"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dice5Img"
        android:layout_width="60dp"
        android:layout_height="270dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="92dp"
        android:tintMode="multiply"
        app:layout_constraintStart_toEndOf="@+id/dice4Img"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/dice2Img"
        android:layout_width="60dp"
        android:layout_height="270dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:tintMode="multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>